error_log stderr notice;

worker_processes auto;
events {
  	multi_accept on;
  	use epoll;
  	worker_connections 1024;
}

stream {
    upstream kube_apiserver {
        least_conn;
        {% for host in groups['kube-master'] %}  server {{ hostvars[host].inventory_hostname }}:6443 max_fails=3 fail_timeout=10s;
        {% endfor %}
#        server 127.0.0.1:6443;
    }

    server {
        listen        0.0.0.0:8443;
        proxy_pass    kube_apiserver;
        proxy_timeout 10m;
        proxy_connect_timeout 5s;
    }
}